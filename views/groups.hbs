<!doctype html>
<html lang="en">

<head>
    <title>Groups | FileBox</title>
</head>

<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <!-- NAVBAR -->
        <nav class="navbar-default navbar-fixed-top">
            <div class="brand" style="float: left">
                <a href="/dashboard"><img src="https://filebox-file-storage.s3.amazonaws.com/defaultimages/logo.png" alt=" FileBox Logo" class="img-responsive logo"
                        style="max-height:50px"></a>
            </div>
            <div class="navbar-btn">
                <button type="button" class="btn-toggle-fullwidth"><i class="lnr lnr-arrow-left-circle"></i></button>
            </div>
            <div class=" nav navbar-right">
                <li class="dropdown">

                    <a href="#" class="dropdown-toggle icon-menu" data-toggle="dropdown">
                        <i class="lnr lnr-alarm"></i>
                        {{#if notifications}}
                        <span class="badge bg-danger">{{notifications.length}}</span>
                        {{else}}

                        {{/if}}
                    </a>
                    <ul class="dropdown-menu notifications">
                        {{#if notifications}}
                        {{#each notifications}}

                        <li><a href="/friends" class="notification-item"><span
                                    class="dot bg-success"></span>{{notification}}</a>
                        </li>
                        {{/each}}
                        {{else}}
                        <li><a href="#" class="notification-item"><span class=""></span>No New Notifications</a>
                        </li>
                        {{/if}}
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="{{user.image_name}}"
                            class="img-circle" alt="Avatar" height="25"> <span>{{user.username}}</span> <i
                            class="icon-submenu lnr lnr-chevron-down"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href="/account"><i class="lnr lnr-user"></i> <span>My Account</span></a></li>
                        <li><a href="/logout"><i class="lnr lnr-exit"></i> <span>Logout</span></a></li>
                    </ul>
                </li>
            </div>

        </nav>
        <!-- END NAVBAR -->
        <!-- LEFT SIDEBAR -->
        <div id="sidebar-nav" class="sidebar">
            <div class="sidebar-scroll">
                <nav>
                    <ul class="nav">
                        <li><a href="/dashboard" class=""><i class="lnr lnr-inbox"></i> <span>My Files</span></a>
                        </li>
                        <li><a href="/groups" class="active"><i class="lnr lnr-user"></i> <span>Groups</span></a></li>
                        <li><a href="/friends" class=""><i class="lnr lnr-user"></i> <span>Friends</span></a></li>
                        <li>
                            <a href="#subPages" data-toggle="collapse" class="collapsed"><i
                                    class="lnr lnr-file-empty"></i> <span>Pages</span> <i
                                    class="icon-submenu lnr lnr-chevron-left"></i></a>
                            <div id="subPages" class="collapse ">
                                <ul class="nav">
                                    <li><a href="/dashboard" class="">Dashboard</a></li>
                                    <li><a href="/groups" class="">Groups</a></li>
                                    <li><a href="friends" class="">Friends</a></li>
                                    <li><a href="/account" class="">Account</a></li>
                                    <li><a href="/login" class="">Login</a></li>
                                    <li><a href="/register" s>Register</a></li>
                                </ul>
                            </div>
                        </li>
                        <li><a href="/logout" class=""> <span>Logout</span></a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- END LEFT SIDEBAR -->
        <!-- MAIN -->
        <div class="main">
            <!-- MAIN CONTENT -->
            <div class="main-content">
                <!-- FILES -->
                <div id="FilesDiv" class="container-fluid">
                    <!-- OVERVIEW -->
                    <div class="panel panel-headline">
                        <div class="panel-heading">
                            <h3 class="panel-title">My Groups</h3>
                            <p class="panel-subtitle">Groups I've Created and Groups I'm Part of</p>
                        </div>
                        <br />

                        <form method="POST" action="groups/createGroup" style="display:inline-flex; padding:25px;">
                            <input type="text" class="form-control" placeholder="enter group name here" name="groupName"
                                required>
                            <button type="submit" class="btn btn-primary">Create Group</button>
                        </form>
                        <form method="POST" action="groups/joinGroup" style="display:inline-flex; padding:25px;">
                            <input type="text" class="form-control" placeholder="enter group name here" name="groupName"
                                required>
                            <button type="submit" class="btn btn-success">Join Group</button>
                        </form>
                    </div>

                    <p class="panel-title" style="padding: 25px;"><strong>Groups That You've Created</strong></p>

                    {{#if successmessage}}
                    <p class="panel-subtitle" style="padding: 25px; color:green"><strong>{{successmessage}}</strong></p>
                    {{/if}}


                    {{#if errmessage}}
                    <p class="panel-subtitle" style="padding: 25px; color:red"><strong>{{errmessage}}</strong></p>
                    {{/if}}

                    {{#if myGroups}}
                    {{#each myGroups}}
                    <a href='/groupdashboard?gid={{GroupID}}'>
                        <div class="panel" style="cursor: pointer;">
                            <div class="panel-body">
                                <div class="nearby-user" style="">
                                    <div class="panel-title"><strong>{{GroupName}}</strong></div><br />
                                    <div class="row">
                                        <div class="col-md-2 col-sm-2">
                                            <img src="{{GroupUser1ImageName}}" alt="user 1 profile image"
                                                class="profile-photo-lg">
                                            <p class="text-muted"><strong>{{GroupUser1UName}}</strong></p>
                                        </div>
                                        <div class="col-md-2 col-sm-2">
                                            <img src="{{GroupUser2ImageName}}" alt="user 2 profile image"
                                                class="profile-photo-lg">
                                            <p class="text-muted">{{GroupUser2UName}}</p>
                                        </div>
                                        <div class="col-md-2 col-sm-2">
                                            <img src="{{GroupUser3ImageName}}" alt="user 3 profile image"
                                                class="profile-photo-lg">
                                            <p class="text-muted">{{GroupUser3UName}}</p>
                                        </div>
                                        <div class="col-md-2 col-sm-2">
                                            <img src="{{GroupUser4ImageName}}" alt="user 4 profile image"
                                                class="profile-photo-lg">
                                            <p class="text-muted">{{GroupUser4UName}}</p>
                                        </div>
                                        <div class="col-md-9 col-sm-7">
                                            <h5></h5>

                                            <p class="text-muted"></p>
                                        </div>
                                        <div class="col-md-3 col-sm-3" style="display:inline-flexbox;">
                                            <form method="POST" action="groups/deleteGroup">
                                                <input type="hidden" name="GroupID" value="{{GroupID}}">
                                                <button type="submit" class="btn btn-danger pull-right"><strong>Disband
                                                        Group</strong>
                                                </button>&emsp;
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    {{/each}}
                    {{else}}
                    <div class="panel">
                        <p class="panel-subtitle" style="padding: 25px;">You Have Not Created Any Groups, You Can
                            Do So
                            Above!</p>
                    </div>
                    {{/if}}
                    <p class="panel-title" style="padding: 25px;"><strong>Groups That You've Joined</strong></p>
                    {{#if JoinedGroups}}
                    {{#each JoinedGroups}}
                    <a href='/groupdashboard?gid={{GroupID}}'>
                        <div class="panel">
                            <div class="panel-body">
                                <div class="nearby-user" style="">
                                    <div class="panel-title"><strong>{{GroupName}}</strong></div><br />
                                    <div class="row">
                                        <div class="col-md-2 col-sm-2">
                                            <img src="{{GroupUser1ImageName}}" alt="user 1 profile image"
                                                class="profile-photo-lg">
                                            <p class="text-muted">{{GroupUser1UName}}</p>
                                        </div>
                                        <div class="col-md-2 col-sm-2">
                                            <img src="{{GroupUser2ImageName}}" alt="user 2 profile image"
                                                class="profile-photo-lg">
                                            <p class="text-muted">{{GroupUser2UName}}</p>
                                        </div>
                                        <div class="col-md-2 col-sm-2">
                                            <img src="{{GroupUser3ImageName}}" alt="user 3 profile image"
                                                class="profile-photo-lg">
                                            <p class="text-muted">{{GroupUser3UName}}</p>
                                        </div>
                                        <div class="col-md-2 col-sm-2">
                                            <img src="{{GroupUser4ImageName}}" alt="user 4 profile image"
                                                class="profile-photo-lg">
                                            <p class="text-muted">{{GroupUser4UName}}</p>
                                        </div>
                                        <div class="col-md-9 col-sm-7">
                                            <h5></h5>

                                            <p class="text-muted"></p>
                                        </div>
                                        <div class="col-md-3 col-sm-3" style="display:inline-flexbox;">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    {{/each}}
                    {{else}}
                    <div class="panel">
                        <p class="panel-subtitle" style="padding: 25px;">You Have Not Joined Any Groups, You Can
                            Do So
                            Above!</p>
                    </div>
                    {{/if}}

                </div>

            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </div>
    <!-- END MAIN -->
    <div class="clearfix"></div>
    <footer>
        <div class="container-fluid">
            <p class="copyright">&copy;Brandon Palumbo, Patrick Asciola 2019</p>
        </div>
    </footer>
    </div>
    <!-- END WRAPPER -->
    <!-- Javascript -->
    <script src="assets/vendor/jquery/jquery.min.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/scripts/klorofil-common.js"></script>
</body>

</html>